# Local Development Environment Configuration
# Copy this to .env.local for local development with localhost MongoDB

# Application
ENVIRONMENT=local
DEBUG=true

# MongoDB Configuration
# For local development - use localhost
MONGODB_URI=mongodb://localhost:27017/perfect_po_dev

# MongoDB Express (for local development)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# JWT (Local Development)
JWT_SECRET_KEY=local_dev_secret_key_change_this_in_production
JWT_EXPIRATION_MINUTES=10080

# Keepa API
KEEPA_API_KEY=your_keepa_api_key_here

# AWS Configuration (Local Development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_dev_s3_bucket_name

# Redis (Local Development)
REDIS_URL=redis://localhost:6379

# Logging (Local Development)
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs/app.log

# Security (Local Development)
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Development Features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_SWAGGER_UI=true
ENABLE_MONGO_EXPRESS=true  # Enabled for local MongoDB
